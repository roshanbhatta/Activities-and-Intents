<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/textOne_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textOne_buttonText"
        android:onClick="launchSecondActivity"
        app:layout_constraintBottom_toTopOf="@+id/textTwo_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/textTwo_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textTwo_buttonText"
        android:onClick="launchSecondActivity"

        app:layout_constraintBottom_toTopOf="@+id/textThree_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textOne_button" />

    <Button
        android:id="@+id/textThree_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textThree_buttonText"
        android:onClick="launchSecondActivity"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTwo_button" />
</androidx.constraintlayout.widget.ConstraintLayout>